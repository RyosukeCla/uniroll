{
  "private": true,
  "scripts": {
    "build": "yarn install && yarn build:ext",
    "build:uniroll": "run-p build:pkg:* && yarn build:output:uniroll",
    "build:cli": "run-s build:uniroll build:output:cli",
    "build:ext": "run-s build:uniroll build:output:ui build:output:ext",
    "build:ui": "run-s build:uniroll build:output:ui",
    "build:pkg:babel-plugin-transform-import-to-pika-cdn": "yarn workspace babel-plugin-transform-import-to-pika-cdn build",
    "build:pkg:rollup-plugin-uniroll-css": "yarn workspace rollup-plugin-uniroll-css build",
    "build:pkg:rollup-plugin-pika-cdn-resolver": "yarn workspace rollup-plugin-pika-cdn-resolver build",
    "build:pkg:rollup-plugin-memfs": "yarn workspace rollup-plugin-memfs build",
    "build:output:cli": "yarn workspace uniroll-tools build",
    "build:output:ui": "yarn workspace uniroll-ui build",
    "build:output:ext": "yarn workspace uniroll-extension build",
    "build:output:uniroll": "yarn workspace uniroll build",
    "demo:watch": "run-p demo:watch:*",
    "demo:watch:uniroll": "yarn build:uniroll -w --mode development",
    "demo:watch:ui-demo": "yarn workspace uniroll-ui demo"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/babel__core": "^7.1.6",
    "@types/node": "^13.9.1",
    "@types/node-fetch": "^2.5.5",
    "@types/react": "^16.9.31",
    "@types/react-dom": "^16.9.6",
    "isomorphic-unfetch": "^3.0.0",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "workspaces": [
    "packages/*"
  ]
}
